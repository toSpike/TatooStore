               </button>
             </div>
        </div>
    </div>
</div>

<div class="container">
    <h2 class="mb-3">Категории</h2>
        <div class="row justify-content-left align-items-start">
            @foreach (var item in Model.Categories)
            {
                <div class="col-sm-12 col-md-4 col-lg-3">
                    <div class="card-deck">
                        <a href="/Catalog?CategoryId=@item.CategoryId&CategoryName=@item.CategoryName" class="text-decoration-none">
                            <div class="card m-3">
                                <div class="text-center">
                                    <img class="card-img-top" src="@(item.CategoryImagePath!=null?item.CategoryImagePath:"/Files/noPhoto.jpg")" />
                                </div>
                                <div class="card-footer text-center">
                                    <h4 style="color: black">@item.CategoryName</h4>
                                </div>
                            </div>
                        </a>
                        
                    </div>
                </div>
            }
        </div>
</div>

