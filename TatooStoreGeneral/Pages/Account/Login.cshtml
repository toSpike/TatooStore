@page
@model TatooStoreGeneral.Pages.Account.LoginModel
@{
}

<div class="container mt-5">
    <div class="row justify-content-center align-items-center">
        <div class="col-sm-10 col-md-8 col-lg-4">
            <h1 class="mb-3">Вход</h1>
            
            <form method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="mb-3">
                    <lable class="form-lable" asp-for="Model.Email">Email</lable>
                    <input type="text" asp-for="Model.Email" class="form-control"/>
                    <span asp-validation-for="Model.Email" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <lable class="form-lable" asp-for="Model.Password">Пароль</lable>
                    <input type="password" asp-for="Model.Password" class="form-control"/>
                    <span asp-validation-for="Model.Password" class="text-danger"></span>
                </div>
                <div class="mb-3 form-check">                    
                    <input type="checkbox" asp-for="Model.RememberMe" class="form-check-input"/>
                    <lable class="form-lable" asp-for="Model.RememberMe">Запомнить меня?</lable>
                </div>
                <div class="mb-3">
                    <button type="submit" class="btn btn-primary">Вход</button>
                </div>
            </form>
        </div>
    </div>
</div>